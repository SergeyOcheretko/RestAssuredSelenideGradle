# ---------------------------------------------
# 1. Этап сборки (Gradle + JDK)
# ---------------------------------------------
FROM gradle:8.7-jdk17 AS build
WORKDIR /app

# Копируем только gradle-файлы для кэширования слоя
COPY build.gradle settings.gradle gradlew ./
COPY gradle ./gradle
RUN ./gradlew dependencies --no-daemon

# Копируем весь исходный код и собираем jar
COPY src ./src
RUN ./gradlew bootJar --no-daemon   # или `jar`, `quarkusBuild`, `shadowJar`

# ---------------------------------------------
# 2. Этап исполнения (JRE)
# ---------------------------------------------
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app

# Устанавливаем не-root пользователя
RUN addgroup -g 1000 app && adduser -u 1000 -G app -s /bin/sh -D app
USER app

# Копируем jar из предыдущего этапа
COPY --from=build /app/build/libs/*.jar app.jar

# Открываем порт (замените на нужный)
EXPOSE 8080

# Стартуем
ENTRYPOINT ["java", "-jar", "app.jar"]